@using PagedList;
@using PagedList.Mvc;

@model PagedList.IPagedList<Bansach.Models.SACH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}
<div class="header-advance-area">
    <div class="breadcome-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcome-list">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <div class="breadcomb-wp">
                                    <div class="breadcomb-icon">
                                        <i class="icon nalika-home"></i>
                                    </div>
                                    <div class="breadcomb-ctn">
                                        <h2>QUẢN LÝ SÁCH</h2>
                                        <p>Welcome to book library <span class="bread-ntd">admin template</span></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <div class="breadcomb-report">
                                    <button data-toggle="tooltip" data-placement="left" title="download report" class="btn"><i class="icon nalika-download"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="product-status mg-b-30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <h4>DANH SÁCH SÁCH</h4>
                    <div class="add-product">
                        <a title="Thêm" class="fa fa-plus" aria-hidden="true">
                            <p> @Html.ActionLink("Thêm", "Create") </p>
                        </a>
                    </div>

                    @using (Html.BeginForm("Index", "SACHes", FormMethod.Get))
                    {
                        <p>
                            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                            <input type="submit" value="Tìm kiếm" class="btn btn-ctl-bt waves-effect " style="background-color: #152036; height:28px; color:#ffffff" />
                        </p>
                    }

                <table>
                    <tr>
                        <th>Tựa sách</th>
                        <th>Số lượng</th>
                        <th>Ngày phát hành</th>
                        <th>Số trang</th>
                        <th>Giá bán</th>
                        <th>Mô tả ngắn</th>
                        <th>Hình ảnh</th>
                        <th>Mã sách</th>
                        <th>Tên danh mục</th>
                        <th>Nhà xuất bản</th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tuasach)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Soluong)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ngayphathanh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sotrang)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Giaban)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Motangan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Hinhanh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Masach)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DANHMUC.Tendanhmuc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NHAXUATBAN.Ten)
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.Idsach }) |
                                @Html.ActionLink("Xem", "Details", new { id = item.Idsach }) |
                                @Html.ActionLink("Xóa", "Delete", new { id = item.Idsach })
                            </td>

                        </tr>
                        }
                    </table>
                    <div class="custom-pagination">
                        <p style="color:#ffffff">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</p>

                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, CurrenFilter = ViewBag.CurrenFilter }))
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
