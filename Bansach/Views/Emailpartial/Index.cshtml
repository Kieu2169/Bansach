@model Bansach.Models.LIENHE

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="tg-formtheme tg-formnewsletter">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span class="icon"> @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })</span>
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                <button type="submit"> <i class="icon-envelope" id="em"></i> </button>
            </div>
        </div>
    </div>

}
<style>
    #em{
        display: block;
        position: absolute;
        top: 13px;
        right: 20px;
        width: 35px;
    }
    .icon {
        position: relative;
    }
</style>