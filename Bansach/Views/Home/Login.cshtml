@model Bansach.Models.USER
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="row justify-content-md-center" style="display:flex; 
justify-content:center; ">
    <div class="col-md-4" style="height: 400px; width: 350px; margin-top: 50px; margin-bottom: 50px; position: relative; display: flex; justify-content: center; flex-direction: column; padding: 10px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); -webkit-box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); -moz-box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); border-radius: 5px; ">
        <div class="card">
            <div class="card-header" >
                <h2 style="margin-top: 50px; margin-left: 50px; color: #5f923a">ĐĂNG NHẬP</h2>
            </div>
            <hr />
            <div class="card-body" >
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="row" >
                        <div class="form-group" style="margin-left:50px; width: 250px">
                            <label>Tên tài khoản</label>
                            @Html.TextBoxFor(m => m.Taikhoan, "", new { @class = "form-control", @placeholder = "Nhập tên tài khoản" })

                        </div>
                        <div class="form-group" style="margin-left: 50px; width: 250px">
                            <label>Mật khẩu</label>
                            @Html.PasswordFor(m => m.Matkhau, new { @class = "form-control", @placeholder = "Nhập mật khẩu" })
                        </div>
                        <div class="form-group">
                            <input style="background-color: #5f923a; margin-left: 130px; border: #5f923a " type="submit" name="submit" class="btn btn-primary" value="Đăng nhập" />
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
